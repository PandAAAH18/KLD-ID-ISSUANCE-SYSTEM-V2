# ==================== APPLICATION SETTINGS ====================
APP_URL=http://localhost/KLD-ID-ISSUANCE-SYSTEM-V2
APP_DEBUG=false

# ==================== EMAIL CONFIGURATION ====================
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
# For other providers: Use your SMTP credentials

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME=KLD School Portal
MAIL_ENCRYPTION=tls

# ==================== EMAIL VERIFICATION SETTINGS ====================
VERIFICATION_TOKEN_EXPIRY=24
SEND_VERIFICATION_EMAIL=true
REQUIRE_EMAIL_VERIFICATION=true

# ==================== DATABASE CONFIGURATION ====================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=school_id_system
DB_USER=root
DB_PASSWORD=

# ==================== SESSION SETTINGS ====================
SESSION_TIMEOUT=1800
SESSION_SECURE_COOKIE=false
SESSION_HTTPONLY=true

# ==================== SECURITY SETTINGS ====================
CSRF_TOKEN_TIMEOUT=3600
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=300

# ==================== FILE UPLOAD SETTINGS ====================
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif
ALLOWED_DOCUMENT_TYPES=application/pdf,image/png
UPLOAD_VIRUS_SCAN=false
